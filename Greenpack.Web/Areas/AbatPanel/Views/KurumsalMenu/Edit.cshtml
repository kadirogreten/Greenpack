@model Models.Entities.KurumsalMenu
@using Greenpack.Web.Helpers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AbatPanel/Views/Shared/_Panel.cshtml";
}



<div class="m-grid__item m-grid__item--fluid m-wrapper">

    <div class="m-content">
        <div class="row">

            <div class="col-md-12">


                <!--begin::Portlet-->
                <div class="m-portlet m-portlet--tab">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <span class="m-portlet__head-icon m--hide">
                                    <i class="la la-gear"></i>
                                </span>
                                <h3 class="m-portlet__head-text">
                                    Square & Solid Input Style
                                </h3>
                            </div>
                        </div>
                    </div>

                    <!--begin::Form-->
                    <form class="m-form m-form--fit m-form--label-align-right" action="/abatpanel/kurumsalmenu/edit/@Model.Id" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="m-portlet__body">
                            <div class="form-group m-form__group m--margin-top-10">
                                <div class="alert m-alert m-alert--default" role="alert">
                                    The example form below demonstrates common HTML form elements solid background style:
                                </div>
                            </div>
                            <div class="form-group m-form__group">
                                <label for="exampleInputEmail1">Menu Adı</label>

                                @Html.EditorFor(model => model.MenuAdi, new { htmlAttributes = new { @class = "form-control m-input m-input--solid", placeholder = "Menu Adı" } })
                                @Html.ValidationMessageFor(model => model.MenuAdi, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group m-form__group">
                                <label for="exampleInputPassword1">Menu Başlık</label>
                                @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control m-input m-input--solid", placeholder = "Başlığı" } })
                                @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group m-form__group">
                                <label for="exampleInputPassword1">Alt Baslik</label>
                                @Html.EditorFor(model => model.AltBaslik, new { htmlAttributes = new { @class = "form-control m-input m-input--solid", placeholder = "Alt Başlık" } })
                                @Html.ValidationMessageFor(model => model.AltBaslik, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group m-form__group">
                                <label for="exampleInputPassword1">Detay</label>
                                @Html.CkeditorFor(model => model.Detay)
                                @Html.ValidationMessageFor(model => model.Detay, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group m-form__group">
                                <label for="exampleInputPassword1">Sıra</label>
                                @Html.EditorFor(model => model.Sira, new { htmlAttributes = new { @class = "form-control m-input m-input--solid", placeholder = "Sıra" } })
                                @Html.ValidationMessageFor(model => model.Sira, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="m-portlet__foot m-portlet__foot--fit">
                            <div class="m-form__actions">
                                <button type="submit" class="btn btn-success">Güncelle</button>

                                <button formaction="/abatpanel/kurumsalmenu/delete/@Model.Id" type="submit" class="btn btn-danger">Sil</button>
                                <a href="~/abatpanel/kurumsalmenu/index" type="reset" class="btn btn-secondary">Vazgeç</a>
                            </div>
                        </div>
                    </form>
                    

                    <!--end::Form-->
                </div>

                <!--end::Portlet-->



            </div>
        </div>
    </div>
</div>


